[Unit]
Description=Vokzal.TECH Local Agent
After=network.target

[Service]
Type=simple
User=vokzal
Group=vokzal
WorkingDirectory=/opt/vokzal/agent
ExecStart=/opt/vokzal/agent/local-agent
Restart=on-failure
RestartSec=5s

# Логирование
StandardOutput=journal
StandardError=journal
SyslogIdentifier=vokzal-agent

# Безопасность
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/vokzal /dev/ttyUSB0 /dev/usb

# Окружение
Environment="GIN_MODE=release"

[Install]
WantedBy=multi-user.target
